#3
rock = '''
    _______
---'   ____)
      (_____)
      (_____)
      (____)
---.__(___)
'''

paper = '''
    _______
---'   ____)____
          ______)
          _______)
         _______)
---.__________)
'''

scissors = '''
    _______
---'   ____)____
          ______)
       __________)
      (____)
---.__(___)
'''

#Write your code below this line ğŸ‘‡
c = int(input("What do you choose? Type 0 for Rock, 1 for Paper, 2 for scissors: "))
if c == 0:
  print(rock)
elif c == 1:
  print(paper)
elif c == 2:
  print(scissors)
  
choices = [rock, paper, scissors]
import random 
i = random.randint(0,2)
move = choices[i]
print("computer chose",move)

if (c == 0 and i == 1) or (c == 1 and i == 2) or (c == 2 and i == 0):
   print("you lose.")
elif c == i:
  print("it's a tie.")
else:
  print("you win.")
  
